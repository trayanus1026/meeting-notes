{
  "expo": {
    "name": "Meeting Notes",
    "slug": "meeting-notes",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "meetingnotes",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meetingnotes.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access to record meetings and generate transcripts."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.meetingnotes.app"
    },
    "plugins": [
      "./plugins/withBackgroundAudio.js"
    ]
  }
}
